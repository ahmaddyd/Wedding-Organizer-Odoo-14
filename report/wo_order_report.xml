<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <template id="report_wo_order">
            <t t-call="web.external_layout">
                <link rel="stylesheet" type="text/scss"
                      href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css"/>
                <script type="text/javascript"
                        src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.min.js"/>

                <div class="page">
                    <center> <h2>Faktur Order</h2> </center>
                    <div class="container">
                        <h3>
                            <div class="row">
                                Kode Order :
                                <span t-field="o.name"/>
                            </div>

                            <div class="row">
                                Pemesan :
                                <span t-field="o.pemesan"/>
                            </div>

                            <div class="row">
                                Tanggal Pemesanan :
                                <span t-field="o.tanggal_pesan"/>
                            </div>

                            <div class="row">
                                Tanggal Pengiriman :
                                <span t-field="o.tanggal_pengiriman"/>
                            </div>
                        </h3>
                    </div>

                    <h4>
                        <div class="row">
                            <table class="table table-bordered">
                                <thead>
                                    <tr>
                                        <th>Jenis Panggung</th>
                                        <th>Harga Satuan</th>
                                        <th>Quantity</th>
                                        <th>Harga</th>
                                    </tr>
                                </thead>
                                <t t-foreach="o.order_detail_panggung_ids" t-as="k">
                                    <tbody>
                                        <tr>
                                            <td>
                                                <span t-esc="k.panggung_id.name"/>
                                            </td>
                                            <td>
                                                <span t-esc="k.harga_satuan"/>
                                            </td>
                                            <td>
                                                <span t-esc="k.qty"/>
                                            </td>
                                            <td>
                                                <span t-esc="k.harga"/>
                                            </td>
                                        </tr>
                                    </tbody>
                                </t>
                            </table>
                        </div>
                    </h4>

                    <h4>
                        <div class="row">
                            <table class="table table-bordered">
                                <thead>
                                    <tr>
                                        <th>Jenis Kursi</th>
                                        <th>Harga Satuan</th>
                                        <th>Quantity</th>
                                        <th>Harga</th>
                                    </tr>
                                </thead>
                                <t t-foreach="o.order_detail_kursi_tamu_ids" t-as="k">
                                    <tbody>
                                        <tr>
                                            <td>
                                                <span t-esc="k.kursi_tamu_id.name"/>
                                            </td>
                                            <td>
                                                <span t-esc="k.harga_satuan"/>
                                            </td>
                                            <td>
                                                <span t-esc="k.qty"/>
                                            </td>
                                            <td>
                                                <span t-esc="k.harga"/>
                                            </td>
                                        </tr>
                                    </tbody>
                                </t>
                            </table>
                        </div>
                    </h4>

                    <div class="container">
                        <h3>
                            <div class="row">
                                Total Harga :
                                <span t-field="o.total"/>
                            </div>
                        </h3>
                    </div>
                </div>
            </t>
        </template>
    </data>
</odoo>