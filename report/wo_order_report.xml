<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <template id="report_wo_order">
            <div class="page">
                <h1>Faktur Order</h1>
                <div class="container">
                    <h2>
                        <div class="row">
                            Kode Order :
                            <span t-field="o.name"/>
                        </div>
                        <div class="row">
                            Nama Pemesan :
                            <span t-field="o.pemesan"/>
                        </div>
                    </h2>
                </div>
                <h3>
                    <div class="row">
                        <table class="table table-bordered">
                            <thead>
                                <tr>
                                    <th>Jenis Kursi</th>
                                    <th>Quantity</th>
                                </tr>
                            </thead>
                            <t t-foreach="o.order_detail_kursi_tamu_ids" t-as="k">
                                <tbody>
                                    <tr>
                                        <td>
                                            <span t-esc="k.kursi_tamu_id.name"/>
                                        </td>
                                        <td>
                                            <span t-esc="k.qty"/>
                                        </td>
                                    </tr>
                                </tbody>
                            </t>
                        </table>
                    </div>
                </h3>
            </div>
        </template>
    </data>
</odoo>